---
import { cn } from "@lib/utils";

interface Props {
  href: string;
  external?: boolean;
  underline?: boolean;
  "aria-label"?: string;
  class?: string;
  className?: string;
}

const { href, external, underline = true, class: className = "" } = Astro.props;
---

<a 
  {...Astro.props}
  href={href}
  target={external ? "_blank" : undefined}
  rel={external ? "noopener noreferrer" : undefined}
  class={className}
>
  <slot />
</a>